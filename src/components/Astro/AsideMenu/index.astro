---
import LibraryIcon from "../../../icons/Library.astro";
import HomeIcon from "../../../icons/Home.astro";
import SearchIcon from "../../../icons/Search.astro";

import SideMenuItem from "../../../components/Astro/AsideMenu/components/SideMenuItem.astro";
import SideMenuCard from "../..//Astro/AsideMenu/components/SideMenuCard.astro";

import { playlists } from "../../..//lib/data";
---

<aside class="[grid-area:aside] rounded-lg overflow-y-auto scroll-style">
	<nav class="flex flex-col gap-2 min-h-full">
		<div class="bg-zinc-900 rounded-lg p-2">
			<ul class="flex flex-col gap-5 p-2">
				<SideMenuItem href="/">
					<HomeIcon />
					<span class="hidden md:block">Home</span>
				</SideMenuItem>

				<SideMenuItem href="/search">
					<SearchIcon />
					<span class="hidden md:block">Search</span>
				</SideMenuItem>
			</ul>
		</div>

		<div class="bg-zinc-900 rounded-lg p-2 flex-1">
			<ul>
				<SideMenuItem href="/#">
					<LibraryIcon />
					<span class="hidden md:block">Your librery</span>
				</SideMenuItem>

				<section class="pt-2 flex flex-col items-center md:items-start">
					{
						playlists.map((playlist) => (
							<SideMenuCard playList={playlist} />
						))
					}
				</section>
			</ul>
		</div>
	</nav>
</aside>
