---
import { playlists } from "@/lib/data";
import PlayListItemCard from "@/components/MainLibrary/components/PlayListItemCard.astro";
import Layout from "@/layouts/Layout.astro";
import Greetings from "@/components/Svelte/Greetings.svelte";
import { Overlay } from "@/components/React/Overlay";
---

<Layout title="BSpotify">
	<section id="playlist-container" class="relative rounded-lg">
		<!-- PageHeader -->

		<div class="relative z-10 px-6 pt-10">
			<Greetings />

			<div class="flex flex-wrap gap-4 mt-6">
				{
					playlists.map((playlist) => (
						<PlayListItemCard playList={playlist} />
					))
				}
			</div>
		</div>

		<Overlay />
	</section>
</Layout>
